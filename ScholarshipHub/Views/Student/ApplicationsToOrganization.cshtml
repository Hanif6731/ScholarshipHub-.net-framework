@model IEnumerable<ScholarshipHub.Models.ApplicationsToOrganization>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ApplicationsToOrganization</title>
</head>
<style>
    .topnav {
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            /* Change the color of links on hover */
            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .topnav a.active {
                background-color: #4CAF50;
                color: white;
            }
</style>
<body>
    <div class="topnav">
        <a class="active" href="/Student/Index">Home</a>
        <a href="/Student/UniversityOffer">Offered By University</a>
        <a href="/Student/OrganizationOffer">Offered by Organization</a>
        <a href="/Student/ApplicationsToUniversity">Application To University</a>
        <a href="/Student/ApplicationsToOrganization">Application To Organization</a>
        <a href="/Student">@Session["studentName"]"</a>
        <a href="">Log Out</a>
    </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Motivation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentBio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AplicationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationInformation)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentBio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AplicationStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationInformation)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
