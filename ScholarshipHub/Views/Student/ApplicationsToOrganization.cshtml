@model IEnumerable<ScholarshipHub.Models.ApplicationsToOrganization>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ApplicationsToOrganization</title>
</head>
<style>
    .topnav {
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            /* Change the color of links on hover */
            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .topnav a.active {
                background-color: #4CAF50;
                color: white;
            }
</style>
<body>
    <div class="topnav">
        <a class="active" href="/Student/Index">Home</a>
        <a href="/Student/UniversityOffer">Offered By University</a>
        <a href="/Student/OrganizationOffer">Offered by Organization</a>
        <a href="/Student/ApplicationsToUniversity">Application To University</a>
        <a href="/Student/ApplicationsToOrganization">Application To Organization</a>
        <a href="/Student">@Session["studentName"]"</a>
        <a href="/Logout/Logout">Log Out</a>
    </div>

    <center>
        <table class="table" border="1">
            <tr>

                <th>
                    Application Status
                </th>
                <th>
                    Message
                </th>
                <th>
                    Offer Title
                </th>
                <th>
                    Organization Name
                </th>

            </tr>

            @foreach (var item in Model)
            {
        <tr>

            <td>
                @if (item.AplicationStatus == null)
                {
                    <p>Pending</p>
                }
                else if (item.AplicationStatus == 0)
                {
                    <p>Rejected</p>
                }
                else if (item.AplicationStatus == 1)
                {
                    <p>Accepted</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationOffer.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationOffer.Organisation.Name)
            </td>
        </tr>
            }

        </table>
    </center>
</body>
</html>
