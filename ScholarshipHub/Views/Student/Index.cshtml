@model ScholarshipHub.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<style>
    .topnav {
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            /* Change the color of links on hover */
            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .topnav a.active {
                background-color: #4CAF50;
                color: white;
            }
</style>
<body>

    <div class="topnav">
        <a class="active" href="/Student/Index">Home</a>
        <a href="/Student/UniversityOffer">Offered By University</a>
        <a href="/Student/OrganizationOffer">Offered by Organization</a>
        <a href="/Student/ApplicationsToUniversity">Application To University</a>
        <a href="/Student/ApplicationsToOrganization">Application To Organization</a>
        <a href="/Student">@Session["studentName"]</a>
        <a href="/logout/Logout">Log Out</a>
    </div>
    <center>
        <div>
            <table>

                <th colspan="2"><h4>Profile</h4></th>
                <tr>
                    <td><cener><a href="#">Home</a></cener></td>
                    <td>
                        <center><a href="/Student/edit/@Model.id">Edit</a></center>
                    </td>
                </tr>
                <tr>
                    <td>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </td>
                </tr>
                <tr>
                    <td>
                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </td>
                </tr>

                <tr>
                    <td>
                        <dt>
                            @Html.DisplayNameFor(model => model.Username)
                        </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.Username)
                        </dd>

                    </td>
                </tr>
                <tr>
                    <td>
                        <dt>
                            @Html.DisplayNameFor(model => model.Gender)
                        </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.Gender)
                        </dd>
                    </td>
                </tr>
                <tr>
                    <td>
                        <dt>
                            DOB:
                        </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.DateOfBirth).ToString().Substring(0, 9)
                        </dd>
                    </td>
                </tr>
                <tr>
                    <td>
                        <dt>
                            @Html.DisplayNameFor(model => model.DesiredDegree)
                        </dt>
                    </td>
                    <td>
                        <dd>
                            @Html.DisplayFor(model => model.DesiredDegree)
                        </dd>
                    </td>
                </tr>

                <tr>
                    <td>Picture: </td>
                    <td>
                        <center>
                            <img src="~/Media/Images/@Model.ImagePath" height="100" width="100" />
                        </center>
                    </td>
                </tr>

                <tr>
                    <td>CV: </td>
                    <td colspan="2">
                        <center>
                            <a href="~/Media/Files/@Model.CVPath">
                                <iframe src="~/Media/Files/@Model.CVPath" height="200%" width="100%">
                            </a>
                        </center>
                    </td>
                </tr>



            </table>
        </div>
    </center>

</body>
</html>

