@model ScholarshipHub.Models.ApplicationsToOrganization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ApplyToOrganization</title>
</head>
<style>
    .topnav {
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            /* Change the color of links on hover */
            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .topnav a.active {
                background-color: #4CAF50;
                color: white;
            }
</style>
<body>
    <div class="topnav">
        <a class="active" href="/Student/Index">Home</a>
        <a href="/Student/UniversityOffer">Offered By University</a>
        <a href="/Student/OrganizationOffer">Offered by Organization</a>
        <a href="/Student/ApplicationsToUniversity">Application To University</a>
        <a href="/Student/ApplicationsToOrganization">Application To Organization</a>
        <a href="/Student">@Session["studentName"]</a>
        <a href="/Logout/Logout">Log Out</a>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="StudentId" value="@Session["studentId"]" />
        <input type="hidden" name="organizationsOfferID" value="@Session["OrgOfferId"]" />


        <div class="form-horizontal">
            <h4>ApplicationsToOrganization</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Motivation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Motivation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Motivation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StudentBio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StudentBio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StudentBio, "", new { @class = "text-danger" })
                </div>
            </div>

            

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
